---
const education = [
	{
		school: '42 Istanbul',
		degree: 'Software Engineering',
		period: '2023 - Present',
		description: 'Peer-to-peer learning environment focused on practical programming skills, algorithms, and system programming.',
		current: true,
	},
	{
		school: 'Marmara University',
		degree: 'Associate Degree - Computer Programming',
		period: '2023 - 2025',
		description: 'Studied computer science fundamentals, data structures, algorithms, and software development.',
		current: false,
	},
];
---

<section id="education" class="space-y-6">
	<h2 class="text-sm font-medium text-text-muted uppercase tracking-wider">Education</h2>

	<div class="relative pl-6">
		<div class="absolute left-[7px] top-2 bottom-2 w-px bg-border"></div>

		<div class="space-y-8">
			{education.map((edu) => (
				<div class="relative">
					<div class={`absolute -left-6 top-1.5 w-3.5 h-3.5 rounded-full border-2 ${edu.current ? 'bg-accent border-accent' : 'bg-bg-secondary border-border'}`}></div>

					<div class="space-y-1">
						<div class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-3">
							<h3 class="text-base font-semibold text-text">{edu.school}</h3>
							<span class="text-xs text-text-muted px-2 py-0.5 bg-bg-tertiary border border-border rounded-full w-fit">{edu.period}</span>
						</div>
						<p class="text-sm font-medium text-accent">{edu.degree}</p>
						<p class="text-sm text-text-secondary leading-relaxed">{edu.description}</p>
					</div>
				</div>
			))}
		</div>
	</div>
</section>

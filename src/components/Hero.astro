---
import GithubChart from './GithubChart';
import { Icon } from 'astro-icon/components';
---

<section id="hero" class="py-8 space-y-8">
	<div class="flex flex-col-reverse md:flex-row md:items-center md:justify-between gap-8 md:gap-12">
		<div class="flex flex-col gap-4">
			<div>
				<p class="text-text-muted text-sm font-medium mb-2">Hey there, I'm</p>
				<h1 class="text-4xl md:text-5xl font-bold text-text">Emrullah Yıldırım</h1>
			</div>
			<p class="text-lg md:text-xl text-text-secondary max-w-lg leading-relaxed">
				Full-stack developer focused on building clean, scalable solutions — always learning, always shipping.
			</p>
			<div class="flex items-center gap-4 mt-2">
				<div class="flex items-center gap-4">
					<a
						href="https://github.com/emrullahyildirim"
						target="_blank"
						class="text-text-muted hover:text-text transition-colors"
						aria-label="GitHub"
					>
						<Icon name="simple-icons:github" class="w-5 h-5" />
					</a>
					<a
						href="https://linkedin.com/in/emrullahyldrm"
						target="_blank"
						class="text-text-muted hover:text-text transition-colors"
						aria-label="LinkedIn"
					>
						<Icon name="simple-icons:linkedin" class="w-5 h-5" />
					</a>
				</div>
				<div class="w-px h-5 bg-border"></div>
				<a
					href="/resumes/resume_en.pdf"
					target="_blank"
					rel="noopener noreferrer"
					class="flex items-center gap-2 px-3 py-1.5 text-sm text-text-secondary bg-bg-secondary border border-border rounded-lg hover:border-border-hover hover:text-text transition-all"
				>
					<Icon name="lucide:file-text" class="w-4 h-4" />
					Resume
				</a>
			</div>
		</div>
		<img
			src="hero.jpeg"
			alt="Emrullah Yıldırım"
			class="w-28 h-28 md:w-40 md:h-40 rounded-2xl border border-border shadow-2xl shadow-black/50"
		>
	</div>
	<div class="space-y-3">
		<h3 class="text-sm font-medium text-text-muted uppercase tracking-wider">Github Activity</h3>
		<div class="p-4 bg-bg-secondary border border-border rounded-xl overflow-x-auto">
			<GithubChart client:only="react" />
		</div>
	</div>
</section>
